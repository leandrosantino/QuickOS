// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../database/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/app.db"
}

model Nature {
  id               Int                @id @default(autoincrement())
  name             String
  PreventiveOS     PreventiveOS[]
  PreventiveAction PreventiveAction[]
}

model Machine {
  id         Int    @id @default(autoincrement())
  tag        String @unique
  ute        String
  technology String

  PreventiveOS     PreventiveOS[]
  PreventiveAction PreventiveAction[]
}

model Worker {
  id           Int    @id @default(autoincrement())
  registration Int    @unique
  name         String
  class        String

  PreventiveOS PreventiveOS[]
}

model PreventiveActionTaken {
  id       Int      @id @default(autoincrement())
  date     DateTime
  osId     Int
  actionId Int
  weekCode String

  acction PreventiveAction @relation(fields: [actionId], references: [id])
  os      PreventiveOS     @relation(fields: [osId], references: [id])
}

model PreventiveAction {
  id             Int    @id @default(autoincrement())
  description    String
  machineId      Int
  excution       String
  frequency      Int
  nextExecution  String
  preventiveOSId Int?
  natureId       Int

  machine               Machine                 @relation(fields: [machineId], references: [id])
  PreventiveOS          PreventiveOS?           @relation(fields: [preventiveOSId], references: [id])
  nature                Nature                  @relation(fields: [natureId], references: [id])
  PreventiveActionTaken PreventiveActionTaken[]
}

model PreventiveOS {
  id            Int                @id @default(autoincrement())
  machineId     Int
  weekCode      String
  responsibleId Int?
  date          DateTime?
  natureId      Int
  actions       PreventiveAction[]
  concluded     Boolean?           @default(false)

  nature                     Nature                  @relation(fields: [natureId], references: [id])
  machine                    Machine                 @relation(fields: [machineId], references: [id])
  responsible                Worker?                 @relation(fields: [responsibleId], references: [id])
  PeventiveActionsCarriedOut PreventiveActionTaken[]

  @@unique([machineId, natureId, weekCode])
}
