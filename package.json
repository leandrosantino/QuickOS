{
  "name": "quick_os",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "author": {
    "name": "Leandro",
    "email": "leandrosantino2013@gmail.com"
  },
  "homepage": "./",
  "description": "tes tes",
  "scripts": {
    "react": "react-scripts start",
    "react:build": "react-scripts build",
    "electron:tsBuild": "tsc -p ./electron.tsconfig.json",
    "electron:tsWath": "tsc -w -p ./electron.tsconfig.json",
    "start": "cls && npm run electron:tsBuild && cls && electron . && cls",
    "dist": "npm run react:build && npm run electron:tsBuild && electron-builder -w -c.extraMetadata.main=build/main.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "asar": true,
    "appId": "com.teste.electron",
    "productName": "QuickOS",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "database/**/*",
      "theme.js"
    ],
    "asarUnpack": [
      "database/app.db"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "icon": "./src/icon.png"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.6",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-inlinesvg": "^3.0.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.2.0",
    "typescript": "^4.9.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "tailwind-scrollbar": "^2.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
